#!/bin/bash

. /etc/makepkg.conf

_download_cachedir=/var/cache/pacman/pkg

for i in `cat $1`
do
	file=`echo $i | sed 's|^.*://.*/||g'`
	if [ -f $file ]; then
		continue
	elif [ -f $_download_cachedir/$file ]; then
		cp $_download_cachedir/$file ./
	else
		$FTPAGENT $i
		if [ "`id -u`" = "0" ]; then
			cp $file $_download_cachedir
		fi
	fi
done
