packages=('bash' 'kernel' 'busybox' 'dhcpcd' 'dialog' 'e2fsprogs' 'eject' \
	  'frugalware' 'glibc' 'kbd' 'module-init-tools' 'ncurses' \
	  'netkit-base' 'pacman' 'reiserfsprogs' 'udev' \
	  'util-linux' 'mdadm' 'xfsprogs' 'ppp' 'rp-pppoe' 'glib2' 'parted' \
	  'bzip2' 'libarchive' 'zlib' 'frugalwareutils' 'wireless_tools' \
	  'ipw2200-firmware' 'openssl' 'openssh' 'bastet' 'readline' \
	  'acx100')
# since we're not in chroot, we need up to date libs. but don't be too
# agressive, we add libs to here just in case there was a bugreport about it
# parted: #807
libs=('parted')

_configure_mirror="http://ftp.frugalware.org/pub/frugalware/frugalware-current"
arch=`uname -m`

unset LANG LC_ALL

rm -f config.mak dl.lst

for i in ${libs[@]}
do
	echo -n "checking for host $i... "
	if [ "`pacman -Si $i|grep ^Version|sed 's/.*: //'`" != "`pacman -Qi $i|grep ^Version|sed 's/.*: //'`" ]; then
		echo "failed, please do a 'pacman -Sy $i'"
		exit 1
	else
		echo "done."
	fi
done

for i in ${packages[@]}
do
	echo -n "checking for $i... "
	if [ "$i" = "busybox" -o "$i" = "ipw2200-firmware" -o "$i" = "bastet" -o "$i" = "acx100" ]; then
		expath="extra/"
	else
		unset expath
	fi
	ver=`pacman -Si $i|grep ^Version|sed 's/.*: //'`
	echo "$_configure_mirror/${expath}frugalware-$arch/$i-$ver-$arch.fpm" >>dl.lst
	echo "`echo $i|tr [a-z] [A-Z]`VER = $ver" >>config.mak
	echo "done."
done
